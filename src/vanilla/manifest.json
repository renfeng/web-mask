{
  "manifest_version": 3,
  "name": "Angular Mask",
  "description": "DEV Tool to inject a local version of an Angular frontend into any test or production environment",
  "version": "0.4",
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "js": ["content.js"],
      "css": [],
      "all_frames": true
    }
  ],
  "web_accessible_resources": [
    {
      "matches": ["*://*/*"],
      "resources": ["page.js"]
    }
  ],
  "optional_permissions": ["declarativeNetRequestWithHostAccess", "storage"],
  "host_permissions": ["https://*/"]
}
